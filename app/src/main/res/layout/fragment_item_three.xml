   <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
       tools:context="com.eap.form.ItemThreeFragment">
       <LinearLayout

           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:orientation="vertical"
           android:background="@color/white">
    <Button
        android:id="@+id/btn_dimens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#176CEC"
        android:text="@string/btn_dimens"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextViewHeight"
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_dimens"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/colorSearch"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/TextViewWidth"
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewHeight"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/colorSearch"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/TextViewWidthPixels"
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewWidth"
        android:layout_marginTop="25dp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/colorSearch"
        android:textSize="20sp"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/TextViewHeightPixels"
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewWidthPixels"
        android:layout_marginTop="25dp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/colorSearch"
        android:textSize="20sp"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/TextViewDensityDpi"
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewHeightPixels"
        android:layout_marginTop="25dp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/colorSearch"
        android:textSize="20sp"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/TextViewXdpi"
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewDensityDpi"
        android:layout_marginTop="25dp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/colorSearch"
        android:textSize="20sp"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/TextViewYdpi"
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewXdpi"
        android:layout_marginTop="25dp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/colorSearch"
        android:textSize="20sp"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/TextViewScreenHeight"
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewYdpi"
        android:layout_marginTop="25dp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/colorSearch"
        android:textSize="20sp"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/TextViewScreenWidth"
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewScreenHeight"
        android:layout_marginTop="25dp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/colorSearch"
        android:textSize="20sp"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/TextViewOrientation"
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewScreenWidth"
        android:layout_marginTop="25dp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/colorSearch"
        android:textSize="20sp"
        android:gravity="center_horizontal"/>
       </LinearLayout>
</ScrollView>
